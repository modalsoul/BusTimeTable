<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/map_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:id="@+id/map_bus_stop_name"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="24sp"
        style="@style/SimpleButton"
        android:id="@+id/open_map_button"
        android:text="@string/go_to_map"/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/map_comment"
        android:text="@string/map_comment"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="24sp"
        style="@style/SimpleButton"
        android:id="@+id/navi_button"
        android:text="@string/go_to_navi"/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/navi_comment"
        android:text="@string/navi_comment"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gps_button"
        android:textSize="24sp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        style="@style/SimpleButton"
        android:text="@string/gps_on_button"
        android:textColor="@color/orange"
        android:background="@color/white"
        android:visibility="invisible"/>
	</LinearLayout>
	</ScrollView>
</LinearLayout>