		        android:id="@+id/selected_bus_stop_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>

	    </LinearLayout>
	    
		<TabWidget 
		    android:id="@android:id/tabs" 
		    android:layout_width="fill_parent" 
