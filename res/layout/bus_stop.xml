<?xml version="1.0" encoding="utf-8"?>
<TabHost 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@android:id/tabhost">
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
	    <TextView 
	        android:id="@+id/selected_bus_stop_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
		<TabWidget 
		    android:id="@android:id/tabs" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" />
			<FrameLayout 
			    android:id="@android:id/tabcontent" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" >
	
			    <LinearLayout 
			        android:id="@+id/weekday_content" 
			        android:layout_width="fill_parent" 
			        android:layout_height="fill_parent">
		            <TextView 
		                android:id="@+id/weekday_tab_name"
		                android:text="first_tab"
		                android:layout_width="wrap_content"
		        		android:layout_height="wrap_content" />
		        </LinearLayout>
		 
		        <LinearLayout 
		            android:id="@+id/saturday_content" 
		            android:layout_width="fill_parent" 
		            android:layout_height="fill_parent">
		            <TextView 
		                android:id="@+id/saturday_tab_name"
		                android:text="second_tab"
		        		android:layout_width="wrap_content"
		        		android:layout_height="wrap_content" />
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:id="@+id/sunday_content" 
		            android:layout_width="fill_parent" 
		            android:layout_height="fill_parent">
		            <TextView 
		                android:id="@+id/sunday_tab_name"
		                android:text="sunday_tab"
		        		android:layout_width="wrap_content"
		        		android:layout_height="wrap_content" />
		        </LinearLayout>
	        </FrameLayout>
	
	</LinearLayout>
</TabHost>